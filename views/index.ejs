<%- include('partials/header.ejs') %>
<main>
  <!-- send books in array and show them here -->
  <div class="container">
    <div class="item">
      <img src="<%= book[0].image_address %>" alt="book image" />
      <div class="item-content hide">
        <div class="content-text">
          <p><%= book[0].book_name %></p>
        <p><%= book[0].author_name %></p>
        </div>
  
        <div class="rating">
          <% 
              const rating = 3; // Assuming rating is between 1 and 5
              for (let i = 1; i <= 5; i++) { 
          %>
              <span class="fa fa-star <%= i <= rating ? 'checked' : '' %>"></span>
          <% } %>
      </div>
      </div>
    </div>
  </div>
  
</main>
<script>
  // use function keyword instead of arrow function to use this keyword
  $(".item").on("mouseenter", function () {
    // Use 'this' to target the specific item being hovered over
    $(this).find(".item-content").removeClass("hide");
  });

  $(".item").on("mouseleave", function () {
    // Use 'this' to target the specific item being hovered over
    $(this).find(".item-content").addClass("hide");
  });
</script>
